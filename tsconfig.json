{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@gqlTypes": ["src/types.ts"],
      "@components": ["src/components/index.tsx"],
      "@libs/*": ["src/libs/*"],
      "@hooks/*": ["src/hooks/*"],
      "@helpers/*": ["src/helpers/*"],
      "@modules/*": ["src/modules/*"],
      "@models": ["src/models/models.ts"],
      "@theme/*": ["src/theme/*"],
      "@screens": ["src/screens/index.tsx"],
      "@gql/*": ["src/graphql/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "api", "src/**/*.test.ts"]
}
